<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
   >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_shadow_end_color"
        tools:context=".ui.home.plantInfo">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="300dp"
            android:layout_height="243dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/searched_Name"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center_horizontal"
            android:text="Add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <TableLayout
            android:layout_width="409dp"
            android:layout_height="363dp"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toTopOf="@+id/submit_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searched_Name"
            android:collapseColumns="2">

            <TableRow>

                <TextView
                    android:text="Description"
                    android:textSize="16sp"
                    android:layout_width="200dp"
                    />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/plantDescription"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Family"
                    android:textSize="16sp"
                    android:layout_width="200dp"
                    />
                <TextView
                    android:text="Species"
                    android:textSize="16sp"
                    android:layout_width="200dp"
                    />

            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/plantfamily"
                    android:textSize="16sp"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    />

                <TextView
                    android:id="@+id/plantSpecies"
                    android:textSize="22dp"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Origins"
                    android:textSize="16sp"
                    android:layout_width="200dp"
                    />

            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/plantOrigin"
                    android:textSize="16sp"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Sunlight"
                    android:textSize="16sp"
                    android:layout_width="200dp"
                    />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="76dp">

                <TextView
                    android:id="@+id/plantSunlight"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:textSize="16sp" />

            </TableRow>
        </TableLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>